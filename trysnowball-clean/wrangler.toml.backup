# Cloudflare Pages Configuration for TrySnowball Clean v2

name = "trysnowball-clean"
pages_build_output_dir = "build"

[env.staging]
name = "trysnowball-clean-staging"
compatibility_date = "2024-01-01"

# Environment variables for staging
[env.staging.vars]
ENVIRONMENT = "staging"

# Custom domains (configure in Cloudflare dashboard)
# staging: staging.trysnowball.co.uk
# production: clean.trysnowball.co.uk (or replace main domain)

[env.production]
name = "trysnowball-clean-production"
compatibility_date = "2024-01-01"

[env.production.vars]
ENVIRONMENT = "production"