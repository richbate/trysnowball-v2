import React from 'react';
import { render } from '@testing-library/react';
import { BrowserRouter } from 'react-router-dom';

export function renderWithProviders(
 ui,
 {
  router = true,
 } = {}
) {
 const tree = router ? <BrowserRouter>{ui}</BrowserRouter> : ui;
 return render(tree);
}