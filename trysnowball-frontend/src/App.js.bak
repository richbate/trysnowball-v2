       <div className="min-h-screen bg-bg flex items-center justify-center">
        <div>Loading‚Ä¶</div>
       </div>
      }>
       <Navigation />
       {showSyncRestoredToast && (
        <SyncRestoredToast onClose={() => setShowSyncRestoredToast(false)} />
       )}
       <ZombieSessionAlert />
