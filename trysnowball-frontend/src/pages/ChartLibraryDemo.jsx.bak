        legend: 'Months',
        legendOffset: 36
       }}
       axisLeft={{
        orient: 'left',
        tickSize: 5,
        tickPadding: 5,
        tickRotation: 0,
        legend: 'Balance',
        legendOffset: -40,
        format: value => formatCurrency(value)
       }}
       offsetType="silhouette"
       colors={['#3b82f6', '#10b981', '#f59e0b', '#ef4444']}
