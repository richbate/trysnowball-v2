# Favicon cache-busting headers
/favicon.ico
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/favicon.svg
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/favicon-96x96.png
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/apple-touch-icon.png
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

