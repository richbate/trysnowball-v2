{
  "name": "trysnowball-frontend",
  "version": "2.2.0",
  "private": true,
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=9.0.0"
  },
  "proxy": "http://127.0.0.1:8787",
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@nivo/bar": "^0.99.0",
    "@nivo/core": "^0.99.0",
    "@nivo/line": "^0.99.0",
    "@nivo/stream": "^0.99.0",
    "@supabase/supabase-js": "^2.52.1",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "dompurify": "^3.2.6",
    "echarts": "^5.6.0",
    "echarts-for-react": "^3.0.2",
    "html-to-image": "^1.11.13",
    "html2canvas": "^1.4.1",
    "jose": "^6.0.12",
    "jsdom": "^24.1.0",
    "lucide-react": "^0.534.0",
    "posthog-js": "^1.258.5",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "react-share": "^5.2.2",
    "recharts": "^2.8.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "victory": "^37.3.6",
    "xml2js": "^0.6.2",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "cross-fetch": "^4.1.0",
    "cypress": "^15.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "fake-indexeddb": "^6.1.0",
    "gzip-size-cli": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^27.5.1",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "puppeteer": "^24.16.2",
    "react-app-rewired": "^2.2.1",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.17",
    "wait-on": "^8.0.4",
    "web-vitals": "^5.1.0",
    "whatwg-url": "^14.2.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "REACT_APP_COMMIT_HASH=$(git rev-parse --short HEAD) REACT_APP_BUILD_DATE=$(date -u +\"%Y-%m-%d\") REACT_APP_VERSION=$(node -p \"require('./package.json').version\") CI=false react-app-rewired build",
    "analyze": "npm run build && source-map-explorer 'build/static/js/*.js' --html analyzer.html",
    "test": "react-scripts test --watchAll=false --ci --runInBand --forceExit src/__tests__",
    "test:ci": "echo 'ðŸš§ Unit tests quarantined due to Jest/Babel config issues. Using E2E tests as CI gatekeeper.'",
    "test:workers": "vitest",
    "eject": "react-scripts eject",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:strict": "eslint src --max-warnings=0",
    "validate-csp": "node scripts/validate-csp.js",
    "optimize-images": "node scripts/optimize-images.js",
    "prebuild": "node -e \"console.log('CI build start')\"; npm run show-git-info",
    "postbuild": "node scripts/generate-sitemap.js",
    "show-git-info": "echo '=== GIT INFORMATION ===' && git log --oneline -5 && echo 'Current branch:' && git branch --show-current && echo 'Latest commit:' && git rev-parse HEAD && echo '=== END GIT INFO ==='",
    "test:unit": "npm run test -- src/__tests__/*.unit.*",
    "test:int": "npm run test -- src/__tests__/*.integration.*",
    "test:all": "npm run test -- src/__tests__",
    "e2e": "cypress run --headless --browser chrome",
    "e2e:ci": "cypress run --headless --browser chrome --spec \"cypress/e2e/critical-flows.cy.js\"",
    "e2e:open": "cypress open",
    "screenshots": "node scripts/generate-screenshots.js",
    "screenshots:local": "node scripts/generate-screenshots.js --base=http://localhost:3000",
    "check:no-legacy": "./scripts/check-no-legacy.sh",
    "check:security": "./scripts/check-security-patterns.sh",
    "audit:critical": "npm audit --omit=dev --audit-level=critical",
    "validate:lockfile": "./scripts/validate-lockfile.sh",
    "ci:security": "./scripts/ci-security-check.sh",
    "docs:verify": "./scripts/docs-smoke.sh"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "error",
            "warn"
          ]
        }
      ],
      "no-debugger": "warn",
      "no-restricted-syntax": [
        "error",
        {
          "selector": "MemberExpression[property.name='data'][object.name=/^(debtsManager|authManager|settingsManager)$/]",
          "message": "Do not access .data on managers; use facade methods like getData(), getMetrics(), getUser(), etc. See AUTH_DEBUG_GUIDE.md for safe patterns."
        },
        {
          "selector": "CallExpression[callee.name='eval']",
          "message": "No eval() - CSP violation risk. Use JSON.parse() or other safe alternatives."
        },
        {
          "selector": "NewExpression[callee.name='Function']",
          "message": "No new Function() - CSP violation risk. Use safe alternatives like ReactMarkdown."
        },
        {
          "selector": "CallExpression[callee.name='setTimeout'][arguments.0.type='Literal']",
          "message": "No string timers - setTimeout('code', delay) is equivalent to eval(). Use function references."
        },
        {
          "selector": "CallExpression[callee.name='setInterval'][arguments.0.type='Literal']",
          "message": "No string timers - setInterval('code', delay) is equivalent to eval(). Use function references."
        }
      ],
      "jsx-a11y/alt-text": "error",
      "jsx-a11y/anchor-has-content": "error",
      "jsx-a11y/anchor-is-valid": "error",
      "jsx-a11y/aria-props": "error",
      "jsx-a11y/aria-role": "error",
      "jsx-a11y/aria-unsupported-elements": "error",
      "jsx-a11y/click-events-have-key-events": "warn",
      "jsx-a11y/heading-has-content": "error",
      "jsx-a11y/iframe-has-title": "error",
      "jsx-a11y/img-redundant-alt": "warn",
      "jsx-a11y/interactive-supports-focus": "error",
      "jsx-a11y/label-has-associated-control": "warn",
      "jsx-a11y/media-has-caption": "warn",
      "jsx-a11y/no-autofocus": "warn",
      "jsx-a11y/no-noninteractive-element-interactions": "warn",
      "jsx-a11y/no-static-element-interactions": "warn",
      "jsx-a11y/role-has-required-aria-props": "error",
      "jsx-a11y/role-supports-aria-props": "error"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/index.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 65,
        "functions": 70,
        "lines": 75,
        "statements": 75
      },
      "./src/utils/debts.{js,ts}": {
        "lines": 90,
        "functions": 95,
        "branches": 85,
        "statements": 90
      },
      "./src/lib/debtsManager.{js,ts}": {
        "lines": 85,
        "functions": 80,
        "branches": 75,
        "statements": 85
      }
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
